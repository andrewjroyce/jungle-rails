<% if order = Product.find_by(id: order_id) %>
  <% item_total = order.price  %>

  <tr>
    <td>
      images <%= image_tag order.image.tiny %>
    </td>
    <td>
      <h4>Product name <%= order.name %></h4>
      <br>
      <p>Description <%= order.description %></p>
    </td>
    <td>
      Price <%= order.price %>
    </td>
    <td>
      ID <%= order.id %>
    </td>
    <td>
     Total <%= item_total %>
    </td>
  </tr>
<% end %>
